using Gtk 4.0;

template $NetworkPanel: Box {
    orientation: vertical;
    spacing: 6;

    styles [
        "network_panel"
    ]

    Box header {
        orientation: horizontal;
        spacing: 12;
        margin-bottom: 6;

        Label {
            label: "RÃ©seaux WiFi";
