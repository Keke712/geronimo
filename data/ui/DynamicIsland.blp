using Gtk 4.0;
using Astal 4.0;

template $DynamicIsland: Astal.Window {
    styles [
        "dynamicisland_window"
    ]

    EventControllerKey {
        key-released => $key_released();
    }

    Revealer {
        transition-duration: 300;
        transition-type: slide_up;
        reveal-child: bind template.visible;

        Box dynamicisland_box {
            orientation: vertical;

            styles [
                "dynamicisland_master"
            ]

            // Calendar Grid (1:1)
            Box {
                styles ["calendar-container"]
                margin-start: 10;
                margin-end: 10;
                margin-top: 15;
                margin-bottom: 10;

                Gtk.Calendar calendar {
                    hexpand: true;
                    vexpand: true;

                    styles [
                        "control_panel_grid_box"
                    ]
                }
            }
        }
    }
}
